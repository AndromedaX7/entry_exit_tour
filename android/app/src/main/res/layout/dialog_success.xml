<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_gravity="center"
              android:orientation="vertical" android:layout_width="100pt"
              android:background="@color/colorAccent" android:layout_height="100pt">
    <FrameLayout android:layout_width="45pt" android:layout_height="45pt" android:layout_gravity="center"
                 android:src="@drawable/ic_action_check" android:layout_marginTop="25pt">
        <ImageView android:layout_width="45pt" android:layout_height="45pt" android:layout_gravity="center" android:id="@+id/su"
                   android:src="@drawable/ic_action_check" android:visibility="gone"/>
        <ProgressBar android:layout_width="45pt" android:layout_height="45pt"  android:id="@+id/pr"
                     android:indeterminateTint="@android:color/white" android:layout_gravity="center"
        />
    </FrameLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/message"
              android:layout_gravity="center|bottom" android:text="信息提交中"
              android:textSize="10pt" android:textColor="@android:color/white" android:layout_marginBottom="10pt"/>

</LinearLayout>
