<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical" android:fitsSystemWindows="false"
                                                   android:layout_width="320pt"
                                                   android:layout_height="511pt">


    <TextView android:layout_marginStart="31pt" android:layout_marginTop="68pt"
              android:text="请选择功能类型" android:textColor="@android:color/black"
              android:layout_width="wrap_content" android:textSize="23pt"
              android:layout_height="wrap_content"
              android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"/>
    <TextView android:textSize="15pt"
              android:text="请选择您要操作的业务选项\n明确您要的才可以给您更好的"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/textView2"
              app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="10pt"
              app:layout_constraintStart_toStartOf="@+id/textView"/>


    <RelativeLayout android:layout_height="108pt"
                    android:layout_width="258pt" android:background="@drawable/bg_01"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    android:layout_marginTop="34pt"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    android:id="@+id/scan">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="26pt"
                      android:orientation="vertical">
            <TextView
                    android:text="扫描" android:textSize="12pt" android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4pt"

            />
            <TextView android:textColor="@android:color/white"
                      android:text="条形编码" android:textSize="20pt"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
            />
        </LinearLayout>
        <ImageView
                android:layout_width="76pt"
                android:layout_height="76pt" android:src="@drawable/ic_01"
                android:id="@+id/imageView" android:layout_centerVertical="true" android:layout_alignParentEnd="true"
                android:layout_marginEnd="18pt"
        />
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="258pt" android:layout_marginTop="20pt" android:background="@drawable/bg_02"
            android:layout_height="108pt"
            app:layout_constraintTop_toBottomOf="@+id/scan"
            app:layout_constraintStart_toStartOf="@+id/scan" android:id="@+id/query">


        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="26pt"
                      android:orientation="vertical">
            <TextView
                    android:text="查询" android:textSize="12pt" android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4pt"

            />
            <TextView
                    android:text="历史记录" android:textSize="20pt" android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
        </LinearLayout>
        <ImageView
                android:layout_width="76pt"
                android:layout_height="76pt"
                android:id="@+id/imageView2" android:src="@drawable/ic_02"
                android:layout_centerVertical="true" android:layout_alignParentEnd="true"
                android:layout_marginEnd="18pt"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>